<?xaml version="1.0" encoding="utf-8" ?>

<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="CS4485_Team75.Pages.PRSetUp.ReuseCriteriaPopup" >
    
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Reuse Criteria" FontSize="Large" HorizontalOptions="Center"/>
        <Label Text="New Review Type"/>
        <Entry x:Name="TypeEntry" Placeholder="Review Type"/>
        <Label x:Name="ErrorLabel" TextColor="Red" HeightRequest="40" Text="" />
        <HorizontalStackLayout Spacing="10">
            <Button Text="Save" Clicked="OnSaveClicked"/>
            <Button Text="Cancel" Clicked="OnCancelClicked"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>