<?xaml version="1.0" encoding="utf-8" ?>

<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="CS4485_Team75.Pages.ViewScores" >
    <StackLayout>
        <Label Text ="{Binding ReviewType}" FontSize="Large" HorizontalOptions="Center" Padding="5" FontAttributes="Bold" TextColor="Black"></Label>
        <Label Text="{Binding Reviewed.name, StringFormat='{0}\'s Peer Review Scores'}" FontSize="Medium" HorizontalOptions="Center" Padding="5" FontAttributes="Bold" TextColor="DimGray"/>
        
    <Grid>
        <Frame VerticalOptions="Center" BorderColor="DarkViolet" BackgroundColor="Lavender">

            
            
       
        
        <ScrollView>
            <Grid x:Name="ScoreGrid"
                Padding="10"
                ColumnSpacing="5"
                RowSpacing="5">
                <!-- Dynamic rows and columns will be added programmatically -->
            </Grid>
        </ScrollView>
        

       
    
    </Frame>
    </Grid>

    </StackLayout>
    
</ContentPage>