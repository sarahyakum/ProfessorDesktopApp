<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.PeerReview"
            Title="Peer Review">
    
    <ScrollView>
         <VerticalStackLayout
            Padding="30" 
            Spacing="10"
            HorizontalOptions="Center">

            <Label Text="Peer Review Page" FontSize="Title" HorizontalOptions="Center"/>

            <HorizontalStackLayout
            Padding="30" 
            Spacing="10"
            HorizontalOptions="Center">
        
                <Button
                    x:Name="ViewPeerReviews"
                    Text="View Peer Reviews" 
                    Clicked="OnViewButtonClicked"
                />

                <Button
                    x:Name="PeerReviewSettings"
                    Text="Set Up Peer Reviews" 
                    Clicked="OnSetUpButtonClicked"
                />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
     
</ContentPage>
