<!-- 
Page layout for the professor to view timesheets of all students for a specific section
Written by Sarah Yakum sny200000
-->

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             x:Class="MauiApp1.Pages.Timesheets"
             Title="Timesheets">

   

    

       <StackLayout>
            <Label 
                Text="Student Timesheets" FontSize="Title" HorizontalOptions="Center" />
            <Label x:Name="Time" FontSize="Large" HorizontalOptions="Center" ></Label>
            <Label x:Name="SectionName" HorizontalOptions="Center" FontSize="Subtitle"></Label>
            <ScrollView Orientation="Both">
                <Grid x:Name="WorkHoursGrid" Padding="5" RowSpacing="5" ColumnSpacing="5">
                    <!-- The grid will be populated dynamically in the code-behind -->
                </Grid>
            </ScrollView>
        </StackLayout>


        
     
</ContentPage>
 