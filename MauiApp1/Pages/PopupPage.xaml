<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="MauiApp1.Pages.PopupPage"
    Size="600, 400">
    <StackLayout Padding="20">
        <Label Text="This is a popup!" FontSize="Small" HorizontalOptions="Center" />
        <ListView ItemsSource="{Binding Timeslots}">
            <ListView.ItemTemplate>
                    <DataTemplate >
                        <ViewCell>
                                <StackLayout Padding="30">
                                    <Label Text="{Binding date}"  FontAttributes="Bold" FontSize="Small" HorizontalOptions="Center" />
                                    <Label Text="{Binding duration}" FontAttributes="Bold" FontSize="Small" HorizontalOptions="Center"/>
                                    <Label Text="{Binding description}" FontAttributes="Bold" FontSize="Small" HorizontalOptions="Center" />

                                </StackLayout>
                            
                        </ViewCell>
                        
                    </DataTemplate>
                </ListView.ItemTemplate>

        </ListView>
        
        
        
        <Button Text="Close" Clicked="OnCloseButtonClicked" />
    </StackLayout>




   

   
</mct:Popup>
