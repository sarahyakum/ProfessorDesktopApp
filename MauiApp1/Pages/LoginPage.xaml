<?xml version="1.0" encoding="utf-8" ?>

<!-- 
Page layout for the user to log into the desktop app, this will be the first page seen upon turning on
Written by Sarah Yakum sny200000
-->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.LoginPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Label
                Text="Login"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />
            <Entry 
                x:Name="NetIDEntry"
                Placeholder="NetID"
                HorizontalOptions="FillAndExpand"/>
            
            <Entry
            IsPassword="True"   
            x:Name="PasswordEntry"
            Placeholder="Password"
            HorizontalOptions="FillAndExpand"/>

            
            <Label x:Name="LoginErrorLabel" TextColor="Red" HeightRequest="40" Text="" HorizontalOptions="Center" FontSize="Medium" />
    
            <Button
                x:Name="LoginButton"
                Text="Log In" 
                Clicked="OnLoginButtonClicked"
                HorizontalOptions="Center" />
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
