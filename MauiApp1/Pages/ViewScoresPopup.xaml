<?xaml version="1.0" encoding="utf-8" ?>

<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="MauiApp1.Pages.ViewScoresPopup" >
    <StackLayout>
         <Label Text ="{Binding review_type}" FontSize="Large" HorizontalOptions="Center" Padding="5"></Label>
        <Label Text="{Binding Student.name, StringFormat='{0} Peer Reviews'}" FontSize="Large" HorizontalOptions="Center" Padding="5"/>
        
    
    <Grid>
        <Frame VerticalOptions="Center">
            
       
        
        <ScrollView>
            <Grid x:Name="ScoreGrid"
                Padding="10"
                ColumnSpacing="5"
                RowSpacing="5">
                <!-- Dynamic rows and columns will be added programmatically -->
            </Grid>
        </ScrollView>
        

       
    
    </Frame>
    </Grid>

    </StackLayout>
    
</ContentPage>