<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.Sections"
             Title="Sections">
    <ScrollView>
    <VerticalStackLayout 
        Padding="30" 
        Spacing="10">

        <Label 
            Text="Buttons for classes -> button for teams -> students"
            SemanticProperties.HeadingLevel="Level1" 
            HorizontalOptions="Center" />

             
        <StackLayout Padding="20">
            <Label Text="Peer Reviews" FontSize="Large" HorizontalOptions="Center" />
            <Label Text="Select a class:" FontSize="Medium" HorizontalOptions="Center" />
            <ListView ItemsSource="{Binding Sections}" SeparatorColor="Black" SelectionMode="Single" Margin="10" ItemSelected="OnClassSelected">
            
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10">
                                <Label Text="{Binding name}" FontAttributes="Bold" HorizontalOptions="Center" Margin="10"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </StackLayout>
        
    

    </VerticalStackLayout>
    </ScrollView>
     
</ContentPage>
